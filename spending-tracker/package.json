{
  "name": "spending-tracker",
  "productName": "Spending Tracker",
  "description": "A spending and budget tracking application",
  "author": "st003",
  "private": true,
  "version": "1.0.0-rc.2",
  "type": "module",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "build:ui": "tsc -b && vite build",
    "dev": "npm-run-all --parallel dev:ui dev:electron",
    "dev:ui": "vite",
    "dev:electron": "npm run transpile:electron; NODE_ENV=development electron --gtk-version=3 .",
    "lint": "eslint .",
    "preview": "vite preview",
    "package:mac": "npm run test && npm run transpile:electron && npm run build:ui && electron-builder --mac --arm64",
    "test": "vitest -r src --run",
    "transpile:electron": "tsc --project src/electron/tsconfig.json"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@mui/x-charts": "^8.4.0",
    "csv-parse": "^6.1.0",
    "electron-log": "^5.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
